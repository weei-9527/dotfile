{
    "layer": "top",
    "modules-left": ["user","hyprland/workspaces","hyprland/submap","wlr/taskbar"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["custom/pacman","privacy","systemd-failed-units","network","wireplumber","cpu","memory","backlight","battery","clock"]
    },
    "custom/launcher":{
        "format": " ",
        "on-click": "wofi -show drun",
        "on-click-right": "killall wofi"
    },
    "hyprland/workspaces": {
     "disable-scroll": true,
     "sort-by-name": true,
     "format": " {icon} ",
     "format-icons": {
         "default": ""
     }
    },
    "hyprland/window": {
    "format": "👉 {}",
    "rewrite": {
        "(.*) — Mozilla Firefox": "🌎 $1",
        "(.*) - fish": "> [$1]"
    },
    "separate-outputs": false
},
    "hyprland/submap": {
    "format": "✌️ {}",
    "max-length": 8,
    "tooltip": false
},
    "battery": {
	"states": {
        "warning": 30,
        "critical": 15
    },    
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""]
    },
    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}"
    }
},
    "backlight": {
    	"device": "intel_backlight",
    	"format": "{icon}",
	"format-icons": ["󰃞", "󰃟", "󰃠"]
},
    "cpu": {
    "interval": 10,
    "format": "{}% ",
    "max-length": 10
},
"memory": {
    "interval": 30,
    "format": "{used:0.1f}G/{total:0.1f}G "
},
"network": {
    "format": "{ifname}",
    "format-wifi": "{essid} ({signalStrength}%) ",
    "format-ethernet": "{ipaddr}/{cidr} 󰊗",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} 󰊗",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    "tooltip-format-ethernet": "{ifname} ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50
},
"systemd-failed-units": {
	"hide-on-ok": false, // Do not hide if there is zero failed units.
	"format": "✗ {nr_failed}",
	"format-ok": "✓",
	"system": true, // Monitor failed systemwide units.
	"user": true // Ignore failed user units.
},
"user": {
        "format": "{user} (up {work_d} days ↑)",
        "interval": 60,
        "height": 30,
        "width": 30,
        "icon": true
},
"wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "",
    "on-click": "helvum",
    "format-icons": ["", "", ""]
},
    "icon-settings": {
        "font": "Font Awesome 6 Free",
        "size": 16
    }
},
"custom/pacman": {
    "format": "{} ",
    "interval": 3600,
    "exec": "(checkupdates; yay -Qum | wc -l)",  // 检查官方包和 AUR 更新数量
    "exec-if": "command -v yay >/dev/null 2>&1", // 确保 yay 存在
    "on-click": "wezterm start -- bash -c 'yay -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar", // 更新系统并刷新 Waybar
    "signal": 8,
    "tooltip": false
}

